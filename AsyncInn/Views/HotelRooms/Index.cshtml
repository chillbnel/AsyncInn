@model IEnumerable<AsyncInn.Models.HotelRoom>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<h2 class="pageHeading">Manage Hotel Rooms</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetFriendly)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFriendly)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { item.RoomID }) |
                @Html.ActionLink("Details", "Details", new { item.RoomNumber }) |
                @Html.ActionLink("Delete", "Delete", new { item.RoomNumber })*@

                <a asp-action="Edit" asp-route-id="@item.RoomNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
